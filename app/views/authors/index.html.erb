<div class="link-wrapper">
  <%= link_to 'New Author', new_author_path, class: "new-author-link" %>
</div>


<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Author</th>
      <th>Images</th>
      <th>Created at</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.id %></td>
        <td><%= author.name %></td>
        <td><%= author.images.count %></td>
        <td><%= author.created_at.strftime("%d %b. %Y") %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
